[Unit]
Description=HBK Platform 1.0

[Service]
WorkingDirectory=/var/www/hbk-platform
ExecStart=/usr/bin/dotnet /var/www/hbk-platform/hbk_main.dll
Restart=always
# Restart service after 10 seconds if the dotnet service crashes:
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=hbk-platform
User=www-data
Environment=ASPNETCORE_ENVIRONMENT=Production
Enviornment=DOTNET_CLI_TELEMETRY_OPTOUT=1

[Install]
WantedBy=multi-user.target
