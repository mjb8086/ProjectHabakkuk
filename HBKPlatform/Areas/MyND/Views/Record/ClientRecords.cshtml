@model HBKPlatform.Models.View.MyNDClientRecords
@{
    ViewBag.Title = $"{Model.ClientName}'s Records";
    Layout = "_MyND";
}

<h2>@Model.ClientName's Records</h2>
@foreach (var record in Model.ClientRecords)
{
    <p><a asp-area="MyND" asp-controller="Record" asp-action="ClientRecord" asp-route-recordId="@record.Id">@record.Title</a> @record.Date @record.Visibility</p>
}
<form id="addNewForm" asp-area="MyND" asp-controller="Record" asp-action="ClientRecord" asp-route-clientId="@Model.ClientId" method="GET">
    <input type="submit" value="Add New" id="btnSave" data-clientId="@Model.ClientId" />
</form>
