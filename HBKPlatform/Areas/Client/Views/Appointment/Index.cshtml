@model HBKPlatform.Models.View.ClientUpcomingAppointmentsView
@{
    ViewBag.Title = "My Appointments";
    Layout = "_Client";
    ViewBag.CurrentNav = "Appointments";
}

<h2>Upcoming appointments.</h2>
@foreach (var appointment in Model.UpcomingAppointments)
{
    <p>@appointment.TreatmentTitle with @appointment.PractitionerName on @appointment.DateString at @appointment.TimeString. @(!string.IsNullOrEmpty(appointment.RoomDetails) ? $"Location: {appointment.RoomDetails}" : "")  <a asp-area="Client" asp-controller="Appointment" asp-action="CancelBooking" asp-route-appointmentId="@appointment.Id">Cancel...</a></p>
}

@if(Model.SelfBookingEnabled) {
    <p><a asp-area="Client" asp-controller="Appointment" asp-action="Booking">Book another appointment.</a></p>
}
