@{
    Layout = "_Layout";
    ViewBag.Css = "mcp.css";
}
@functions
{
    private string GetActiveClass(string navPath){
        if (ViewBag.CurrentNav == null) return "";
        return ViewBag.CurrentNav.Contains(navPath) ? "active" : "";
    }
}
<div id="myNdNav" class="subNav">
    <a asp-area="MCP" asp-controller="MCP" asp-action="Index" class="@GetActiveClass("Index")" >Index</a>
    <a asp-area="MCP" asp-controller="ClinicManagement" asp-action="Index" class="@GetActiveClass("ClinicManagement")">Clinic Management</a>
    <a asp-area="MCP" class="@GetActiveClass("Audit")">Auditing</a>
    <a asp-area="MCP" class="@GetActiveClass("Configuration")">Configuration</a>
    <a asp-area="MCP" asp-controller="MCP" asp-action="Status" class="@GetActiveClass("SystemStatus")">System Status</a>
</div>
@RenderBody()