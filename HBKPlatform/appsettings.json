{
  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": { 
      "Default" : "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Fatal"
      } 
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path":  "./log/hbk-.log", "rollingInterval": "Day" } }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      { "Name": "ToMaximumDepth", "Args": { "maximumDestructuringDepth": 4 } },
      { "Name": "ToMaximumStringLength", "Args": { "maximumStringLength": 100 } },
      { "Name": "ToMaximumCollectionCount", "Args": { "maximumCollectionCount": 10 } }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "HbkContext": "Host=localhost;Database=HBKPlatform;Username=devlogin;Password=Changeme123;Include Error Detail=true"
  }
}