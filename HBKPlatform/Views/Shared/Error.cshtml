@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Ah bollocks.</h1>
<h2 class="text-danger">An error occurred while processing your request. Please contact support who will be "happy" to help you.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

